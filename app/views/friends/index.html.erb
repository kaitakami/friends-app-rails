<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover" id="friends">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <%= render friend %>
  <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>

<% else %>

<% end %>


